@model iLoyalty.Models.MLModel

@{
    ViewData["Title"] = "Index";
}

<div class="container m-0 p-0">
    <h4 class="text-info">DASHBOARD</h4>
    <div class="row border p-3">
        <div class="col-6">
            @using (Html.BeginForm("Index", "DashBoard", FormMethod.Post))
            {
                <h5 class="text-info">Prediction Panel</h5>
                <hr />
                <div>
                    @*@Html.DropDownListFor(m => m.List, Model.List, "--Select Model--")*@
                    @Html.DropDownListFor(m => m.id, new SelectList(Model.ListModels, "id", "model_name"), "--Select Model--")
                </div>
                <div>
                    <input type="submit" value="GET PREDICTIONS" class="btn btn-success" />
                </div>
                <div>
                    <h4 class="text-info">Selected ID: @ViewBag.predictMsg</h4>
                </div>
            }
            </div>
        <div class="col-6">
            <h5 class="text-info">Predicted Customers</h5>
        </div>
    </div>
</div>

