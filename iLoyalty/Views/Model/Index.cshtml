@model iLoyalty.Models.CBoxList
@{
    ViewData["Title"] = "Index";
}

<h2 class="text-info">Build Machine Learning Model</h2>

@using (Html.BeginForm())
{
    <div class="container row p-0 m-0 border p-3">
        <div class="col-6 border p-3">
            <h5 class="text-info">Select Data</h5>
            <div>
                @for (int i = 0; i < Model.cboxlist.Count; i++)
                {
                    @Html.CheckBoxFor(m => Model.cboxlist[i].isChecked)
                    <label class="text-info">
                        @Model.cboxlist[i].boxName
                    </label>
                    @Html.HiddenFor(m => Model.cboxlist[i].boxId)
                    @Html.HiddenFor(m => Model.cboxlist[i].boxName)
                    <br />
                }
            </div>
        </div>
        <div class="col-6 p-3">
            <h5 class="text-info">Model Information</h5>
            <hr />
            <div class="form-group">
                <label class="text-secondary">Training Period</label>
                <input value="Select start date" readonly="readonly" class="form-control datepicker" />
            </div>
            <div class="form-group">
                <input type="text" name="name" placeholder="Enter model name..." required="" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="creator" placeholder="Enter your name..." required="" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="CREATE MODEL" class="btn btn-success" />
            </div>
            <div>
                <h4 class="text-info">@ViewBag.msg</h4>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/js/model.js"></script>
}